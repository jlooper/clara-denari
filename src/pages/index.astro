---
import Layout from '../layouts/Layout.astro';
import Page from '../components/Page.astro';
import Typewriter from '../components/Typewriter.astro';
import GameLayout from '../components/GameLayout.astro';

const title = "Stolen!";
const backdrop = "https://res.cloudinary.com/dr60nybtj/image/upload/v1756943716/cd-home.webp";
---

<Layout title={title} backdrop={backdrop} fullScreenLayout={true}>
  <div class="prose max-w-none">
    <!-- Main content area with image and inventory side by side -->
    <GameLayout title={title} backdrop={backdrop} />
    
    <!-- Full width storyline -->
    <div class="w-full mb-6">
      <h2 class="text-responsive-xl md:text-responsive-2xl font-bold text-blue-400 mb-4 shadow-lg">
        {title}
      </h2>
      
      <div class="bg-black bg-opacity-50 border-2 border-blue-500 rounded-lg p-6 mb-6">
        <Typewriter 
          translationKey="story.index"
          speed={30}
          delay={1000}
          class="block mb-4 text-gray-100 text-responsive-base md:text-responsive-lg leading-relaxed"
        />
      </div>
    </div>
    
    <!-- Full width buttons -->
    <div class="w-full flex justify-center">
      <Page url="purloined_property" instructions="" action="Grab a Taxi to Boston HQ" condition="none" />
    </div>
  </div>
</Layout> 